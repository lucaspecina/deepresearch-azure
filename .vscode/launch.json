{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: main.py (Interactive)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": []
        },
        {
            "name": "Python: main.py (with Session)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": ["--session", "${input:sessionId}"]
        },
        {
            "name": "Python: main.py (Verbose)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": ["-v"]
        },
        {
            "name": "Python: main.py (Verbose with Session)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": ["-v", "--session", "${input:sessionId}"]
        }
    ],
    "inputs": [
        {
            "id": "sessionId",
            "type": "promptString",
            "description": "Enter the session ID to load",
            "default": ""
        }
    ]
}
